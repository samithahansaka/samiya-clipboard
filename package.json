{
  "name": "@samithahansaka/clipboard",
  "version": "1.0.0",
  "description": "A modern, lightweight React hook and component for copying to clipboard with feedback",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "keywords": [
    "react",
    "clipboard",
    "copy",
    "hook",
    "useCopyToClipboard",
    "copy-to-clipboard",
    "typescript"
  ],
  "author": "samithahansaka",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/samithahansaka/samiya-clipboard.git"
  },
  "bugs": {
    "url": "https://github.com/samithahansaka/samiya-clipboard/issues"
  },
  "homepage": "https://github.com/samithahansaka/samiya-clipboard#readme",
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  }
}
